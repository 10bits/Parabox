<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.Parabox" parent="Theme.Material3.DayNight.NoActionBar">
    </style>

    <style name="date_picker_theme" parent="ThemeOverlay.AppCompat.Dialog">
        <item name="colorAccent">@color/material_dynamic_primary80</item>                   <!--header background-->
        <item name="android:textColorPrimaryInverse">@color/material_dynamic_primary20</item> <!-- header date, month color && calendar text highlight color -->
        <item name="android:textColorSecondaryInverse">@color/material_dynamic_primary40</item> <!-- header year color -->
        <item name="android:windowBackground">@color/material_dynamic_neutral10</item>     <!--calendar background-->
        <item name="android:colorControlActivated">@color/material_dynamic_primary80</item> <!--selected day-->
        <item name="android:textColorPrimary">@color/material_dynamic_neutral90</item> <!--days of the month-->
        <item name="android:textColorSecondary">@color/material_dynamic_primary80</item>    <!--days of the week-->
        <item name="colorControlHighlight">@color/material_dynamic_secondary40</item>
    </style>

    <style name="ThemeOverlay.App.DatePicker" parent="@style/ThemeOverlay.MaterialComponents.MaterialCalendar">
        <item name="colorPrimary">@color/material_dynamic_primary80</item>
        <item name="colorOnPrimary">@color/material_dynamic_primary20</item>
        <item name="colorSecondary">@color/material_dynamic_secondary80</item>
        <item name="colorOnSecondary">@color/material_dynamic_secondary20</item>
        <item name="colorTertiary">@color/material_dynamic_tertiary80</item>
        <item name="colorOnTertiary">@color/material_dynamic_tertiary20</item>
        <item name="colorSurface">@color/material_dynamic_neutral10</item>
        <item name="colorOnSurface">@color/material_dynamic_neutral90</item>
        <item name="colorSurfaceVariant">@color/material_dynamic_neutral_variant30</item>
        <item name="colorOnSurfaceVariant">@color/material_dynamic_neutral_variant80</item>
        <item name="colorOutline">@color/material_dynamic_neutral_variant60</item>
        <item name="colorAccent">@color/material_dynamic_primary80</item>
    </style>
</resources>